<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 用印申請單表單視圖 -->
    <record id="view_stamp_application_form" model="ir.ui.view">
        <field name="name">stamp.application.form</field>
        <field name="model">stamp.application</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit" string="送簽" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_complete" string="完成用印" type="object" class="oe_highlight" invisible="state != 'approved'"/>
                    <button name="action_cancel" string="取消" type="object" invisible="state != 'draft'"/>
                    <button name="action_back_to_draft" string="回到草稿" type="object" class="btn-secondary" invisible="state not in ['rejected_submitted', 'cancelled']" confirm="確定要回到草稿嗎？回到草稿後EFGP序號將被清空。"/>
                    <button name="action_back_to_approved" string="撤回簽核" type="object" class="btn-secondary" invisible="state in ['draft', 'cancelled']" confirm="確定要撤回簽核嗎？撤回後狀態將回到草稿，EFGP 序號將被清空。"/>
                    <button name="action_update_efgp_status" string="更新EFGP狀態" type="object" class="btn-info" invisible="not efgp_serial_no"/>
                    <button name="action_update_history" string="更新歷程" type="object" class="btn-info"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="efgp_serial_no" readonly="1"/>
                        <field name="name" readonly="1"/>
                        <field name="date" readonly="state != 'draft'"/>
                        <field name="applicant_id" readonly="state != 'draft'"/>
                        <field name="document_name" readonly="state != 'draft'"/>
                        <field name="description" placeholder="請輸入申請原因..." readonly="state != 'draft'"/>
                        <field name="history_ids">
                            <tree create="0" delete="0" edit="0" disable_link="1" readonly="1">
                                <field name="activity"/>
                                <field name="state" string="狀態"/>
                                <field name="signer"/>
                                <field name="time"/>
                                <field name="comment"/>
                            </tree>
                        </field>
                    </group>
                    <div class="oe_chatter">
                        <field name="activity_ids"/>
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- 用印申請單列表視圖 -->
    <record id="view_stamp_application_tree" model="ir.ui.view">
        <field name="name">stamp.application.tree</field>
        <field name="model">stamp.application</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="applicant_id"/>
                <field name="document_name"/>
                <field name="description"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- 用印申請單看板視圖 -->
    <record id="view_stamp_application_kanban" model="ir.ui.view">
        <field name="name">stamp.application.kanban</field>
        <field name="model">stamp.application</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="date"/>
                <field name="applicant_id"/>
                <field name="document_name"/>
                <field name="description"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <strong><field name="name"/></strong>
                                <div><field name="date"/></div>
                                <div><field name="applicant_id"/></div>
                                <div><field name="document_name"/></div>
                                <div><field name="description"/></div>
                                <div><field name="state" widget="label_selection"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- 用印申請單搜尋視圖 -->
    <record id="view_stamp_application_search" model="ir.ui.view">
        <field name="name">stamp.application.search</field>
        <field name="model">stamp.application</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="document_name"/>
                <field name="applicant_id"/>
                <field name="date"/>
                <field name="description"/>
                <field name="state"/>
            </search>
        </field>
    </record>

    <!-- 用印申請單動作 -->
    <record id="action_stamp_application" model="ir.actions.act_window">
        <field name="name">用印申請單</field>
        <field name="res_model">stamp.application</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_my_applications': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                建立您的第一個用印申請單
            </p>
            <p>
                用印申請單用於管理公司印章的使用申請流程。
            </p>
        </field>
    </record>
</odoo> 